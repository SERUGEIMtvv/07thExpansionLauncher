                    <Image Source="cic_logo_ja.png" Stretch="UniformToFill"/>
                </TabItem.Header>
                <Grid x:Name="GridCic" Style="{DynamicResource GridCh}">
                    <Grid.Background>
                        <ImageBrush ImageSource="cic_bg.png" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <StackPanel x:Name="StackCic" 
                                Height="400" Width="640"
                                HorizontalAlignment="Center" VerticalAlignment="Bottom" >
                        <Button x:Name="buttonCic1" Click="ButtonCic1_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.Cic1TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.Cic1TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonCic2" Click="ButtonCic2_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.Cic2TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.Cic2TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonCic3" Click="ButtonCic3_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.Cic3TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.Cic3TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonCic4" Click="ButtonCic4_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.Cic4TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.Cic4TB2}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
