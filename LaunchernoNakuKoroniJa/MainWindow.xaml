<Window x:Class="LaunchernoNakuKoroniJa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:LaunchernoNakuKoroniJa.Properties"
        mc:Ignorable="d"
        Icon="icon.ico"
        WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow"
        FontFamily="/AssemblyNamespace;component/#Honoka Antique-Kaku"
        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight" 
        Margin="0,0,0,0" Padding="0,0,0,0" BorderThickness="0,0,0,0">
    <Grid x:Name="MainGrid" 
          HorizontalAlignment="Center" VerticalAlignment="Center"
          Margin="0,0,0,0">
        <TabControl x:Name="chapterselect" 
                    TabStripPlacement="Bottom" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="0,0,0,0" Padding="0,0,0,0" BorderThickness="0,0,0,0">
            <TabItem x:Name="TabHig" Style="{DynamicResource TabCh}">
                <TabItem.Header>
                    <Image Source="hig_logo_ja.png"  Stretch="UniformToFill"/>
                </TabItem.Header>
                <Grid x:Name="GridHig"  Style="{DynamicResource GridCh}">
                    <Grid.Background>
                        <ImageBrush ImageSource="hig_bg.png" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <StackPanel x:Name="StackHigLeft" 
                                Height="480" Width="320" 
                                HorizontalAlignment="Left" VerticalAlignment="Center" >
                        <Button x:Name="buttonHigQ1" Click="ButtonHigQ1_Click" 
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigQ1TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigQ1TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonHigQ3" Click="ButtonHigQ3_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigQ3TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigQ3TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonHigA1" Click="ButtonHigA1_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigA1TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigA1TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonHigA3" Click="ButtonHigA3_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigA3TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigA3TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonHigRei" Click="ButtonHigRei_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigReiTB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigReiTB2}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel x:Name="StackHigRight" 
                                Height="480" Width="320"
                                HorizontalAlignment="Right" VerticalAlignment="Center" >
                        <Button x:Name="buttonHigQ2" Click="ButtonHigQ2_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigQ2TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigQ2TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonHigQ4" Click="ButtonHigQ4_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigQ4TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigQ4TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonHigA2" Click="ButtonHigA2_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigA2TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigA2TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonHigA4" Click="ButtonHigA4_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigA4TB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigA4TB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonHigHou" Click="ButtonHigHou_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigHouTB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigHouTB2}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel x:Name="StackHigCenter" 
                                Height="93" Width="640"
                                HorizontalAlignment="Center" VerticalAlignment="Bottom" >
                        <Button x:Name="buttonHigCon" Click="ButtonHigCon_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigConTB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.HigConTB2}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem x:Name="TabUmi" Style="{DynamicResource TabCh}">
                <TabItem.Header>
                    <Image Source="umi_logo_ja.png" Stretch="UniformToFill"/>
                </TabItem.Header>
                <Grid x:Name="GridUmi" Style="{DynamicResource GridCh}">
                    <Grid.Background>
                        <ImageBrush ImageSource="umi_bg.png" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <StackPanel x:Name="StackUmi" 
                                Height="480" Width="640"
                                HorizontalAlignment="Center" VerticalAlignment="Bottom" >
                        <Button x:Name="buttonUmiQ" Click="ButtonUmiQ_Click"
