                        </Button>
                        <Button x:Name="buttonUmiC" Click="ButtonUmiC_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.UmiCTB1}"/>
                                <TextBlock Style="{DynamicResource Text}" Text="{x:Static res:Resources.UmiCTB2}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="buttonUmiT" Click="ButtonUmiT_Click"
                                Style="{DynamicResource ButtonJaCenter}" >
